<div class="form" style="border: 1px">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, placeholder: "Username" %></br></br>
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %></br></br>

    <% if devise_mapping.rememberable? -%>
      Remember me <br>
      <%= f.check_box :remember_me %></br></br>
    <% end -%>
    <%= f.submit "Log in" %>
  <% end %>
</div>

<style type="text/css">
.form {
  margin: 150px 0px 0px 600px;
  border: 1px solid #ccc!important;
  width: max-content;
  padding: 50px;
}
input {
  width: 200px;
  height: 25px
}

input[type=submit] {
  border-radius: 0px;
  width: 100px;
  background-color: deepskyblue;
}
</style>
