<h1><%= current_user.customer.first_name %></h1>
<table class="table table-bordered table-hover" >
  <thead>
    <tr>
      <th>Date</th>
      <th>Operator</th>
      <th>Product name</th>
      <th>Price</th>
      <th>Weight</th>
    </tr>
  </thead>

  <tbody>
    <%sum = 0%>
    <% @products.each do |product| %>
      <tr>
        <%sum = sum + product.weight%>
        <td><%= product.created_at.strftime '%d/%B/%Y' %></td>
        <td><%= product.operator.first_name.capitalize %></td>
        <td><%= product.product_name.capitalize %></td>
        <td><%= product.price %></td>
        <td><%= product.weight %></td>
      </tr>
    <% end %>
    <th colspan="2">Total</th>
    <th>Product = <%= @products.count %></th>
    <th>Rs-<%= sum * 3 %></th>
    <th><%= sum %>/kg</th>
  </tbody>
</table>