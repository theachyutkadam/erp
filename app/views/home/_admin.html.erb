<div style="float:left">
  <%= link_to "Expenses", expenses_path, class: "link_exp"%>
</div>
<br><br>
<%= link_to 'New Customer', new_customer_path, class: "link-blue" %><br><br>
<table border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Mobile</th>
      <th>Address</th>
      <th>Mail</th>
      <th colspan="4">Links</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.first_name + " " + customer.middle_name + " " + customer.last_name %></td>
        <td><%= customer.mobile_num %></td>
        <td><%= customer.address %></td>
        <td><%= customer.mail %></td>
        <td><%= link_to 'New Products', new_product_path(cust_id: customer.id), class: "link_show" %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer), class: "link_edit" %></td>
        <td><%= link_to 'Destroy', confirm_delete_customers_path(cust_id: customer.id), class: "link_delete" %></td>
        <td><%= link_to 'Payment', new_payment_path(cust_id: customer.id), class: "link_create"   %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br><br>
<br><br>

<%= link_to 'New Operator', new_operator_path, class: "link-blue" %><br><br>
<table border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Mobile</th>
      <th>Address</th>
      <th>Mail</th>
      <th>Salary</th>
      <th colspan="3">Links</th>
    </tr>
  </thead>

  <tbody>
    <% @operators.each do |operator| %>
      <tr>
        <td><%= operator.first_name + " " + operator.middle_name + " " + operator.last_name %></td>
        <td><%= operator.mobile %></td>
        <td><%= operator.permanent_address %></td>
        <td><%= operator.mail %></td>
        <td><%= operator.salary %></td>
        <td><%= link_to 'Records', record_operators_path(operator_id: operator.id), class: "link_show" %></td>
        <td><%= link_to 'Edit', edit_operator_path(operator), class: "link_edit" %></td>
        <td><%= link_to 'Destroy', confirm_delete_operators_path(operator_id: operator.id), class: "link_delete" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br><br>