
<h1>Listing Customers on <%= current_user.operator.first_name + " " + current_user.operator.last_name%> login</h1>

<table  class="table table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>Mobile</th>
      <th>Mail</th>
      <th colspan="2">Links</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.created_at.strftime '%d/%B/%Y' %></td>
        <td><%= customer.first_name %></td>
        <td><%= customer.middle_name %></td>
        <td><%= customer.last_name %></td>
        <td><%= customer.address %></td>
        <td><%= customer.mobile_num %></td>
        <td><%= customer.mail %></td>
        <td><%= link_to 'New Product', enter_operator_product_operators_path(cust_id: customer.id), class: "btn btn-primary" %></td>
        <td><%= link_to 'Details', show_operator_product_operators_path(cust_id: customer.id), class: "btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>