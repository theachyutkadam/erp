<p id="notice"><%= notice %></p>

<h1>Listing Customers on Operators login</h1>

<table border="1">
  <thead>
    <tr>
      <th>Date</th>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>Mobile</th>
      <th>Mail</th>
      <th colspan="3">Links</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.created_at %></td>
        <td><%= customer.first_name %></td>
        <td><%= customer.middle_name %></td>
        <td><%= customer.last_name %></td>
        <td><%= customer.address %></td>
        <td><%= customer.mobile_num %></td>
        <td><%= customer.mail %></td>
        <td><%= link_to 'Enter Products', new_product_path(cust_id: customer.id) %></td>
        <td><%= link_to 'Show Products', show_operator_product_operators_path(cust_id: customer.id) %></td>
        <td><%= link_to 'Payment'%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>