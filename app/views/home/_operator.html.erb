
<h1>Listing Customers on<%= current_user.operator.first_name.capitalize + " " + current_user.operator.last_name.capitalize%> login</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Address</th>
      <th>Mobile</th>
      <th>Mail</th>
      <th colspan="2">Links</th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.created_at.strftime '%d/%B/%Y' %></td>
        <td><%= customer.first_name.capitalize+ " " +customer.middle_name.capitalize+ " " +customer.last_name.capitalize %></td>
        <td><%= customer.address.capitalize %></td>
        <td><%= customer.mobile_num %></td>
        <td><%= customer.mail %></td>
        <td><%= link_to '', enter_operator_product_operators_path(cust_id: customer.id), class:"btn btn-xs btn-info glyphicon glyphicon-plus" %></td>
        <td><%= link_to '', show_operator_product_operators_path(cust_id: customer.id), class:"btn btn-info btn-xs glyphicon glyphicon-th-list" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>