<table class="table table-bordered table-hover">
  <thead>
    <strong>Products Entry Details</strong>
    <tr>
      <th>ðŸ“† Date</th>
      <th>Operator</th>
      <th>Product name</th>
      <th>Payment_type</th>
      <th>Price(Rs.)</th>
      <th>Weight(kg.)</th>
    </tr>
  </thead>

  <tbody>
    <% aa = 0%>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.created_at.strftime '%d/%B/%Y'%></td>
        <td><%= product.operator.first_name.capitalize%></td>
        <td><%= product.product_name %></td>
        <td><%= product.payment_type %></td>
        <td><%= product.price %></td>
        <td><%= product.weight %></td>
      </tr>
    <% end %>
    <th colspan="2">Total</th>
    <th colspan="2"><%= @products.count %></th>
    <th>Rs. <%= @products.sum(:price) %></th>
    <th><%= @products.sum(:weight) %>/kg</th>
  </tbody>
</table>