<div class="row">
  <div class="col-sm-6">
    <table class="table table-bordered table-hover">
      <thead>
        <%= link_to "Back", home_index_path, class: "btn btn-info pull-right" %>
        <strong>Products Details</strong>
        <tr>
          <th>Date</th>
          <th>Customer</th>
          <th>Product Name</th>
          <th>Price</th>
          <th>Weight</th>
        </tr>
      </thead>
      <tbody>
        <% sum = 0 %>
        <% @products.each do |product| %>
          <tr>
            <% sum = sum + product.weight%>
            <td><%= product.created_at.strftime '%d/%B/%Y' %></td>
            <td><%= product.customer.first_name.capitalize+ " " +product.customer.last_name.capitalize %></td>
            <td><%= product.product_name.capitalize %></td>
            <td><%= product.price %></td>
            <td><%= product.weight %></td>
          </tr>
        <% end %>
        <th colspan="3">Total</th>
        <th>Rs-<%= sum * 3 %></th>
        <th><%= sum %>/kg</th>
      </tbody>
    </table>
  </div>
</div>