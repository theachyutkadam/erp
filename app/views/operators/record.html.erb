<h1><%= @products.first.operator.first_name + " " + @products.first.operator.last_name %></h1>
<%= link_to "Back", home_index_path, class: "link_back_record" %>
<table border="1" id="operator_record_table">
  <tr></tr>
  <thead>
    <tr>
      <th>Date</th>
      <th>Customer</th>
      <th>Product Name</th>
      <th>Price</th>
      <th>Weight</th>
    </tr>
  </thead>

  <tbody>
    <% sum = 0 %>
    <% @products.each do |product| %>
      <tr>
        <% sum = sum + product.weight%>
        <td><%= product.created_at %></td>
        <td><%= product.customer.first_name %></td>
        <td><%= product.product_name %></td>
        <td><%= product.price %></td>
        <td><%= product.weight %></td>
      </tr>
    <% end %>
    <th colspan="3">Total</th>
    <th>Rs-<%= sum * 3 %></th>
    <th><%= sum %>/kg</th>
  </tbody>
</table>