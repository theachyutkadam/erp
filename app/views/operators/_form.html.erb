<%= form_for(@operator) do |f| %>
  <% if @operator.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@operator.errors.count, "error") %> prohibited this operator from being saved:</h2>

      <ul>
      <% @operator.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-2">
        <div class="input-group-sm">
          <td> <%= f.text_field :first_name, placeholder: "First Name", class: "form-control" %></td>
        </div>
      </div>

      <div class="col-sm-2">
        <div class="input-group-sm">
          <td> <%= f.text_field :middle_name, placeholder: "Middle Name", class: "form-control" %></td>
        </div>
      </div>

      <div class="col-sm-2">
        <div class="input-group-sm">
          <td> <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control"%></td>
        </div>
      </div>

      <div class="col-sm-2">
        <div class="input-group-sm">
          <td> <%= f.text_field :mobile, placeholder: "Mobile No", class: "form-control" %></td>
        </div>
      </div>


      <div class="col-sm-4">
        <div class="input-group-sm">
          <td> <%= f.text_field :permanent_address, placeholder: "Permanent Address", class: "form-control" %></td>
        </div>
      </div>


    </div>
  </div>

  <div class="form-group">
    <div class="row">

      <div class="col-sm-4">
        <div class="input-group-sm">
          <td> <%= f.text_field :salary, placeholder: "Salary", class: "form-control" %></td>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="input-group-sm">
          <td> <%= f.text_field :mail, placeholder: "Email", class: "form-control" %></td>
        </div>
      </div>
      <div class="col-sm-2">
        <div class="input-group-sm">
          <%= f.submit class: "btn btn-sm btn-info" %>
        </div>
      </div>
    </div>
  </div>
<% end %>