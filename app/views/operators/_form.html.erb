<%= form_for(@operator) do |f| %>
  <% if @operator.errors.any? %>
    <div class="alert alert-danger fade in">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <ul>
      <% @operator.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-2">
        <div class="input-group-sm">
          <td> <%= f.text_field :first_name, placeholder: "First Name", class: "form-control" %></td>
        </div>
      </div>

      <div class="col-sm-2">
        <div class="input-group-sm">
          <td> <%= f.text_field :middle_name, placeholder: "Middle Name", class: "form-control" %></td>
        </div>
      </div>

      <div class="col-sm-2">
        <div class="input-group-sm">
          <td> <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control"%></td>
        </div>
      </div>

      <div class="col-sm-2">
        <div class="input-group-sm">
          <td> <%= f.text_field :mobile, placeholder: "Mobile No", class: "form-control" %></td>
        </div>
      </div>


      <div class="col-sm-4">
        <div class="input-group-sm">
          <td> <%= f.text_field :salary, placeholder: "Salary", class: "form-control" %></td>
        </div>
      </div>

    </div>
  </div>

  <div class="form-group">
    <div class="row">

      <div class="col-sm-4">
        <div class="input-group-sm">
          <td> <%= f.text_field :mail, placeholder: "Email", class: "form-control" %></td>
        </div>
      </div>

      <div class="col-sm-6">
        <div class="input-group-sm">
          <td> <%= f.text_field :permanent_address, placeholder: "Address", class: "form-control" %></td>
        </div>
      </div>

      <div class="col-sm-1">
        <div class="input-group-sm">
          <%= f.submit class: "btn btn-sm btn-primary" %>
        </div>
      </div>
      <div class="col-sm-1">
        <div class="input-group-sm">
          <%= link_to "Back", home_index_path, class: "btn btn-info btn-sm"%>
        </div>
      </div>
    </div>
  </div>
<% end %>