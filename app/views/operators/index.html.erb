<p id="notice"><%= notice %></p>

<h1>Listing Operators</h1>

<table border="1">
  <thead>
    <tr>
      <th>Date</th>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th>Mobile</th>
      <th>Mail</th>
      <th>Permanent address</th>
      <th>Salary</th>
      <th colspan="3">Links</th>
    </tr>
  </thead>

  <tbody>
    <% @operators.each do |operator| %>
      <tr>
        <td><%= operator.created_at %></td>
        <td><%= operator.first_name %></td>
        <td><%= operator.middle_name %></td>
        <td><%= operator.last_name %></td>
        <td><%= operator.mobile %></td>
        <td><%= operator.mail %></td>
        <td><%= operator.permanent_address %></td>
        <td><%= operator.salary %></td>
        <td><%= link_to 'Show', operator %></td>
        <td><%= link_to 'Edit', edit_operator_path(operator) %></td>
        <td><%= link_to 'Destroy', confirm_delete_operators_path(operator_id: operator.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

