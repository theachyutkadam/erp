<p id="notice"><%= notice %></p>

<table border="1">
  <thead>
    <tr>
      <th>Date</th>
      <th>Product name</th>
      <th>Weight</th>
      <th>Price</th>
      <th colspan="2">Links</th>
    </tr>
  </thead>
  <h2><%= current_user.operator.first_name%></h2>
  <tbody>
    <%sum = 0%>
    <% @products.each do |product| %>
      <tr>
        <% sum = sum + product.weight%>
        <td><%= product.created_at %></td>
        <td><%= product.product_name %></td>
        <td><%= product.weight %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Edit', edit_products_path(cust_id: product.customer.id, id: product.customer.id), class: "link_edit" %></td>
      </tr>
    <% end %>
    <th colspan="1">Total</th>
    <th><%= @products.count %></th>
    <th><%= sum %>/kg</th>
    <th>Rs-<%= sum * 3 %></th>
  </tbody>
</table>
